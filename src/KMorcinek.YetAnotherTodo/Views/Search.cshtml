@using KMorcinek.YetAnotherTodo.ViewModels
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>

@{
    Layout = "layout.cshtml";
}

<form action="/search"><input name="searchTerm" /><button type="submit">Search</button></form>

<ul>
    @foreach (SearchResultViewModel searchResult in @Model.SearchResultViewModels)
    {
        <li>@searchResult.Content - (<a href="/@searchResult.TopicId/@searchResult.TopicName">@searchResult.TopicName</a>)</li>
    }
</ul>

